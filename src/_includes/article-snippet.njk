<li>
    <article class="snippet">
      <img rel="image_src" loading="lazy" src="{{post.data.image}}" alt="{{post.data.imageAlt}}" class="snippet__image">
      <h3 src="{{post.url}}" class="snippet__title"><a href="{{post.url}}">{{post.data.title}}</a></h3>
      <p class="snippet__body">{{post.data.description}}</p>
      <p class="snippet__meta"><span>{{post.data.author}} | </span><span>{{post.date | postDate}}</span></p>
      <a class="cursor-pointer text-indigo-500 inline-flex items-center md:mb-2 lg:mb-36" href="{{post.url}}">View Full Coverage
        <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
          <path d="M5 12h14"></path>
          <path d="M12 5l7 7-7 7"></path>
        </svg>
      </a>
    </article>
  </li>

  